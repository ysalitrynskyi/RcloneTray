{
    "name": "rclonetray",
    "productName": "RcloneTray",
    "title": "RcloneTray",
    "version": "1.0.0",
    "releaseType": "release",
    "description": "Simple Rclone bookmark manager GUI that stays in the system tray.",
    "repository": {
        "type": "git",
        "url": "https://github.com/dimitrov-adrian/RcloneTray"
    },
    "keywords": [
        "Tray",
        "Mount",
        "Rclone",
        "Connect",
        "Remote Filesystem",
        "Network",
        "Utilities"
    ],
    "author": "Adrian Dimitrov <dimitrov.adrian@gmail.com>",
    "bugs": {
        "url": "https://github.com/dimitrov-adrian/RcloneTray/issues"
    },
    "license": "MIT",
    "main": "src/main.js",
    "scripts": {
        "postinstall": "./update-rclone-binaries.sh && electron-builder install-app-deps",
        "start": "node_modules/.bin/electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "publish": "build -p always --mac --win --linux --x64"
    },
    "eslintConfig": {
        "fix": true,
        "envs": {
            "es6": true,
            "browser": false,
            "node": true
        }
    },
    "build": {
        "appId": "com.github.dimitrov-adrian.rclonetray",
        "files": [
            "src"
        ],
        "asar": true,
        "asarUnpack": [
            "src/ui/icons/*"
        ],
        "compression": "normal",
        "mac": {
            "category": "public.app-category.utilities",
            "type": "distribution",
            "target": [
                "zip",
                "dmg"
            ],
            "publish": [
                "github"
            ],
            "extraResources": [
                "rclone/darwin/*",
                "rclone/LICENSE"
            ],
            "darkModeSupport": false
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "publish": [
                "github"
            ],
            "extraResources": [
                "rclone/linux/*",
                "rclone/LICENSE"
            ]
        },
        "win": {
            "target": "nsis",
            "publish": [
                "github"
            ],
            "extraResources": [
                "rclone/win32/*",
                "rclone/LICENSE"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "chokidar": "^2.0.4",
        "electron-context-menu": "^0.16.0",
        "electron-is-dev": "^1.0.1",
        "ini": "^1.3.5"
    },
    "devDependencies": {
        "electron": "^4.0.0",
        "electron-builder": "^20.38.4",
        "electron-reload": "^1.4.0",
        "standard": "*"
    }
}
